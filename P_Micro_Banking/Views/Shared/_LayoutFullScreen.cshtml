        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- CoreUI and necessary plugins-->
        <script src="~/js/site.js"  asp-append-version="true"></script>
        <script src="~/lib/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
        <!-- Plugins and scripts required by this view-->
        @*<script src="~/lib/chart.js/dist/Chart.min.js"></script>
            <script src="~/lib/coreui/js/custom-tooltips.js"></script>
            <script src="~/lib/coreui/js/main.js"></script>*@
    <script src="~/js/toastr.js"></script>
   
    <script>
        jQueryAjaxPost = form => {
            displayBusyIndicator();
            try {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.isValid) {
                            displayBusyIndicatorstop();
                            toastr.clear();
                            toastr.success(res.message);
                            window.location.href = '@Url.Action("Index", "Home")';
                        }
                        else {
                            displayBusyIndicatorstop();
                            toastr.error(res.message);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })
            } catch (e) {
                console.log(e);
            }

            //prevent default post event
            return false;
        }

        jQueryAjaxPostRegister = form => {
            displayBusyIndicator();
            try {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.isValid) {
                            displayBusyIndicatorstop();
                            toastr.clear();
                            toastr.success(res.message);
                            window.location.href = '@Url.Action("login", "Account")';
                        }
                        else {
                            displayBusyIndicatorstop();
                            toastr.error(res.message);
                        }
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })
            } catch (e) {
                console.log(e);
            }

            //prevent default post event
            return false;
        }

        function displayBusyIndicator() {
            $('.loading').show();
        }
        function displayBusyIndicatorstop() {
            $('.loading').hide();
        }


        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "rtl": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "onclick": null,
            "showDuration": 300,
            "hideDuration": 1000,
            "timeOut": 5000,
            "extendedTimeOut": 1000,
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        
        $(function () {
            AjaxCall('/Account/GetURoles', null).done(function (response) {
                if (response.length > 0) {
                    console.log(response)
                    $('#Role').html('');
                    var options = '';
                    options += '<option value="Select">Select User Role</option>';
                    for (var i = 0; i < response.length; i++) {
                        options += '<option value="' + response[i].code + '">' + response[i].item + '</option>';
                    }
                    $('#Role').append(options);

                }
            }).fail(function (error) {
                alert(error.StatusText);
            });
        });

        $(function () {
            AjaxCall('/Account/GetBranches', null).done(function (response) {
                if (response.length > 0) {
                    console.log(response)
                    $('#Branch').html('');
                    var options = '';
                    options += '<option value="Select">Select Branch</option>';
                    for (var i = 0; i < response.length; i++) {
                        options += '<option value="' + response[i].code + '">' + response[i].item + '</option>';
                    }
                    $('#Branch').append(options);

                }
            }).fail(function (error) {
                alert(error.StatusText);
            });
        });


        function AjaxCall(url, data, type) {
            return $.ajax({
                url: url,
                data: data,
                dataType: 'json',
                type: type ? type : 'GET',
                contentType: "application/json; charset=utf-8"
            });
        }

    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>

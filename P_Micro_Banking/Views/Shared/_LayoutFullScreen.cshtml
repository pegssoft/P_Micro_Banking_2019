<body class="app flex-row align-items-center">
    <partial name="_BusyIndicatorPartial" />
    <div class="container">
        <div class="row justify-content-center">
            @RenderBody()
        </div>
    </div>
    <div class="loading">
        Loading&#8230;
    </div>

    

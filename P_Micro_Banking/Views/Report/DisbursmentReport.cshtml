@model P_Micro_Banking.Models.Report.DisburmentTotal
@{
    ViewData["Title"] = "Newclient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row col-lg-12 float-left mt-3 mb-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>Disbursment Report
                </div>
                <div class="card-body">
                    <div class="row" style="margin:5px;">
                        <form asp-controller="Report" asp-action="DisbursmentReport" method="post">
                            <div class="input-group">
                                <input required type="date" class="form-control rounded" placeholder="Search" name="StartDate" aria-label="Search"
                                       aria-describedby="search-addon" style="width: 300px;" /> &nbsp;&nbsp;
                                <input required type="date" class="form-control rounded" placeholder="Search" name="EndDate" aria-label="Search"
                                       aria-describedby="search-addon" style="width: 300px;" />
                                &nbsp;&nbsp;
                                <input style="width: 100px;" class="btn btn-outline-success" type="submit" value="Search" />
                            </div>

                        </form>
                    </div>

                    <div class="row mt-4">
                        <table class="table table-responsive-sm table-bordered table-striped table-sm" cellpadding="0" cellspacing="0">
                            <tr>
                                <th>AccountNumber</th>
                                <th>AccountHolderName</th>
                                <th>LoanName</th>
                                <th>Dis Date</th>
                                <th>Tenure</th>
                                <th>P Amount</th>
                                <th>PI Amount</th>
                                <th>Total Interest</th>
                                <th>OfficerID</th>

                            </tr>
                            @foreach (var item in Model.disburments)
                            {
                        <tr>
                            <td>@item.AccountNumber  </td>
                            <td>@item.AccountHolderName  </td>
                            <td>@item.LaonName  </td>
                            <td>@item.Date  </td>
                            <td>@item.Tenor</td>
                            <td>@item.PrincipalAmount </td>
                            <td>@item.PrincipalInterestAmount </td>
                            <td>@item.TotalInterest </td>
                            <td>@item.RelationshipOfficerID</td>

                        </tr>
                            }

                        <tfoot>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td>  </td>
                                <td></td>
                                <td></td>
                                <td style="font-weight:bold">@Model.PrincipalAmount </td>
                                <td style="font-weight:bold">@Model.PrincipalInterestAmount </td>
                                <td style="font-weight:bold">@Model.TotalInterest </td>
                                <td></td>

                            </tr>
                        </tfoot>
                        </table>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>


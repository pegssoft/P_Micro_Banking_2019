    <div class="row col-lg-12 float-left mt-3 mb-3">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i> Deposit
                </div>
                <div class="card-body">
                    <div>
                        <div class="row mt-5">
                            <table id="DepositeAccount" class="table table-responsive-sm table-bordered table-striped table-sm" cellpadding="0" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Account Nunber</th>
                                        <th>Officer</th>
                                        <th>Amount</th>


                                    </tr>
                                </thead>
                                <tbody id="TableBody">

                                    @foreach (var item in Model.deposite.ToList())
                                    {
                                        <tr>
                                            <td>@item.AccountNumber</td>
                                            <td>@item.ReletionshipId</td>
                                            <td>@item.Amount</td>

                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td style="font-weight:bold">@Model.DepositeTotal</td>

                                </tfoot>
                            </table>

                        </div>
                        <div class="row">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


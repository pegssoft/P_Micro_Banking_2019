@model P_Micro_Banking.Models.AccountViewModel.RegisterViewModel
@{ ViewData["Title"] = "Register";
    Layout = "_LayoutFullScreen"; }

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mx-4">
                    <form asp-action="register" onsubmit="return jQueryAjaxPostRegister(this);" enctype="multipart/form-data" method="post">
                        <div class="card-body p-4">
                            <h1>Register</h1>
                            <p class="text-muted">Create your account</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-people"></i>
                                    </span>
                                </div>
                                <input asp-for="First_Name" class="form-control" type="text" placeholder="FirstName">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-people"></i>
                                    </span>
                                </div>
                                <input asp-for="First_Last" class="form-control" type="text" placeholder="LastName">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-home"></i>
                                    </span>
                                </div>
                                <select asp-for="Company" class="form-control">
                                    <option selected>Select Company</option>
                                    <option value="1">Joy Zone Nig</option>


                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-bell"></i>
                                    </span>
                                </div>
                                <select asp-for="Branch" id="Branch" class="form-control">
                                    <option selected>Select Branch</option>

                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-anchor"></i>
                                    </span>
                                </div>
                                <select asp-for="Role" id="Role" class="form-control">
                                    <option selected>Select User Role</option>


                                </select>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-location-pin"></i>
                                    </span>
                                </div>
                                <input asp-for="Address" class="form-control" type="text" placeholder="Address">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-phone"></i>
                                    </span>
                                </div>
                                <input asp-for="Phone_Number" class="form-control" type="text" placeholder="Phone number">
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">@@</span>
                                </div>
                                <input asp-for="Email" class="form-control" type="text" placeholder="Email">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Repeat password">
                            </div>
                            <input class="btn btn-block btn-success" value="Create Account" type="submit" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model P_Micro_Banking.Models.Customer.CustomerOnboarding
@{
    ViewData["Title"] = "Customer Single View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h3 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #1d9bc6;
        font-size: 18px;
        padding: 2px 5px 5px 5px;
    }
</style>

<div class="container">


    <div class="row mb-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>Customer
                </div>
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#home4" role="tab" aria-controls="home">
                            <i class="icon-calculator"></i> Personal Information
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " data-toggle="tab" href="#home5" role="tab" aria-controls="home">
                            <i class="icon-calculator"></i> Bank Information
                        </a>
                    </li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="home4" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-12">
                                <h3>Personal Information</h3>
                                <div class="form-row " style="margin-top:0px;">
                                    <div class="col-12 col-sm-4 ">
                                        <label class="control-label">First Name</label>
                                        <input asp-for="FirstName" id="FirstName" placeholder="First Name" class="form-control form-control-lg" />
                                    </div>
                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">Middle Name</label>
                                        <input asp-for="MiddleName" id="MiddleName" placeholder="Middle Name" class="form-control form-control-lg" />
                                    </div>
                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">Last Name</label>
                                        <input asp-for="LastName" id="LastName" placeholder="Last Name" class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-6 ">
                                        <label class="control-label">Gender</label>
                                        <select asp-for="Gender" class="form-control form-control-lg">
                                            <option selected value="1">Male</option>
                                            <option value="2">Female</option>

                                        </select>
                                    </div>

                                    <div class="col-12 col-sm-6">
                                        <label class="control-label">Date of Birth</label>
                                        <input asp-for="DOB" placeholder="Date of Birth" type="date" class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-6 ">
                                        <label style="margin-top: -4px;" class="control-label">Marital Status</label>
                                        <select asp-for="MaritalStatus" class="form-control form-control-lg">
                                            <option selected value="1">Married</option>
                                            <option value="2">Single</option>
                                            <option value="3">Divorced</option>
                                            <option value="4">Widowed</option>


                                        </select>
                                    </div>

                                    <div class="col-12 col-sm-6 mt-4 mt-sm-0 ">
                                        <label class="control-label">Title</label>
                                        <select asp-for="Title" class="form-control form-control-lg">
                                            <option selected value="1">Mr</option>
                                            <option value="2">Mrs</option>
                                            <option value="7">Master</option>
                                            <option value="9">Miss</option>
                                            <option value="10">Alhaji</option>
                                            <option value="11">Alhaji</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-6 ">
                                        <label style="margin-top: -4px;" class="control-label">Email</label>
                                        <input asp-for="Email" id="Email" placeholder="Email" class="form-control form-control-lg" />
                                    </div>

                                    <div class="col-12 col-sm-6 mt-4 mt-sm-0 ">
                                        <label class="control-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" id="PhoneNumber" placeholder="Phone Number" class="form-control form-control-lg" />
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-4 ">
                                        <label style="margin-top: -4px;" class="control-label">Country</label>
                                        <select asp-for="Country" class="form-control form-control-lg">
                                            <option value="1">Nigeria</option>
                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">State</label>
                                        <select asp-for="State" id="State" class="form-control form-control-lg">
                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">City</label>
                                        <select asp-for="City" id="City" class="form-control form-control-lg">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-12 ">
                                        <label style="margin-top: -4px;" class="control-label">Address Line 1</label>
                                        <input asp-for="AddressLine1" id="AddressLine1" placeholder="Address Line 1" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <div class="form-row mt-4 mb-5 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-12 ">
                                        <label style="margin-top: -4px;" class="control-label">Address Line 2</label>
                                        <input asp-for="AddressLine2" id="AddressLine2" placeholder="Address Line 2" class="form-control form-control-lg" />
                                    </div>

                                </div>
                                <h3>Beneficiary Information</h3>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-12 ">
                                        <label style="margin-top: -4px;" class="control-label">Full Name</label>
                                        <input asp-for="NFirstName" id="NFirstName" placeholder="First Name" class="form-control form-control-lg" />
                                    </div>

                                    
                                </div>

                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-4 ">
                                        <label style="margin-top: -4px;" class="control-label">Email</label>
                                        <input asp-for="NEmail" id="NEmail" placeholder="Email" class="form-control form-control-lg" />
                                    </div>

                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">Phone Number</label>
                                        <input asp-for="NPhoneNumber" placeholder="Phone Number" class="form-control form-control-lg" />
                                    </div>
                                    <div class="col-12 col-sm-4 mt-4 mt-sm-0 ">
                                        <label class="control-label">Relationship</label>
                                        <select asp-for="Relationship" placeholder="Relationship" required="" class="form-control form-control-lg">
                                            <option value="0" disabled selected="selected">Relationship...</option>
                                            <option value="1">Father</option>
                                            <option value="2">Mother</option>
                                            <option value="3">Uncle</option>
                                            <option value="4">Aunt</option>
                                            <option value="5">Brother</option>
                                            <option value="6">Sister</option>
                                            <option value="7">Child</option>
                                            <option value="8">Friend</option>
                                            <option value="9">Religion-related</option>
                                            <option value="10">Work-related</option>
                                            <option value="11">Wife</option>
                                            <option value="12">Husband</option>
                                            <option value="13">Partner</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="form-row mt-4 " style="margin-top:0px;">
                                    <div class="col-12 col-sm-12 ">
                                        <label style="margin-top: -4px;" class="control-label">Address Line 1</label>
                                        <input asp-for="NAddressLine" id="NAddressLine" placeholder="Address Line " class="form-control form-control-lg" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-->

            </div>
            <div class="tab-content">
                <div class="tab-pane " id="home5" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-row mt-4 " style="margin-top:0px;">
                                <div class="col-12 col-sm-6 ">
                                    <label class="control-label">Identification Type</label>
                                    <select asp-for="IdentificationType" class="form-control form-control-lg">
                                        <option selected value="1">BVN</option>
                                        <option value="2">NIN</option>
                                    </select>
                                </div>

                                <div class="col-12 col-sm-6 ">
                                    <label class="control-label">Identification Number</label>
                                    <input asp-for="IdentificationNumber" id="IdentificationNumber" placeholder="Identification Number" class="form-control form-control-lg" />
                                </div>
                            </div>
                            <div class="form-row mt-4" style="margin-top:0px;">
                                <div class="col-12 col-sm-12 ">
                                    <label style="margin-top: -4px;" class="control-label">Relationship Officer</label>
                                    <input asp-for="RelationshipOfficer" id="RelationshipOfficer" class="form-control form-control-lg" />
                                    
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@model IEnumerable<P_Micro_Banking.Models.Customer.CustomerV>
@{
    ViewData["Title"] = "Customer View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row float-left mt-3 mb-3">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-edit"></i>List Customer
                </div>
                <div class="card-body">
                    <div class="row">
                        <table id="CustomerViews" class="table table-responsive-sm table-bordered table-striped table-sm" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>Date of Bith</th>
                                    <th>Gender</th>
                                    <th>Date Created</th>
                                    <th>CustomerID</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName </td>
                                        <td>@item.MiddleName </td>
                                        <td>@item.LastName  </td>
                                        <td>@item.DOB  </td>
                                        <td>@item.Gender  </td>
                                        <td>@item.CreatedDate</td>

                                        <td>

                                            <a asp-action="CustomerSingleView" class="Editlink btn" asp-route-id="@item.CustomerId">@item.CustomerId</a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>


        </div>
    </div>
</div>
@section Scripts{

    <script>
        $(document).ready(function () {
            $('#CustomerViews').DataTable();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}